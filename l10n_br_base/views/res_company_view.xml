<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Views: res.company
    -->
    <record id="l10n_br_base_res_company_form" model="ir.ui.view">
        <field name="name">l10n_br_base.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">country_id == %(base.br)d</attribute>
            </xpath>
            <field name="company_registry" position="after">
                <field invisible="country_id != %(base.br)d" name="legal_name" placeholder="Legal Name..."/>
                <field invisible="country_id != %(base.br)d" name="cnpj_cpf" placeholder="CNPJ..."/>
                <field invisible="country_id != %(base.br)d" name="inscr_est" placeholder="State Tax Number..."/>
                <field invisible="country_id != %(base.br)d" name="inscr_mun" placeholder="Municipal Tax Number..."/>
                <field invisible="state_id != %(base.state_br_am)d" name="suframa" placeholder="Suframa"/>
                <field invisible="country_id != %(base.br)d" name="state_tax_number_ids">
                    <tree editable="bottom">
                        <field invisible="1" name="company_id"/>
                        <field name="inscr_est"/>
                        <field create="False" domain="[('country_id', '=', %(base.br)d)]" edit="False" name="state_id"/>
                    </tree></field></field>
            <!-- TODO: Na v12 era desnecessario incluir o codigo abaixo para
                  tornar invisivel o campo City/Char e incluir City_id/m2o,
                  teria outra forma de fazer isso? -->
            <field name="state_id" position="after">
                <field class="o_address_city" name="city_id" options='{"no_open": True}' placeholder="City"/></field>
            <field name="city" position="attributes">
                <attribute name="invisible">1</attribute></field></field>
    </record>
    <record id="l10n_br_base_res_company_tree" model="ir.ui.view">
        <field name="name">l10n_br_base.res.company.tree</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="cnpj_cpf"/></field></field>
    </record>
</odoo>

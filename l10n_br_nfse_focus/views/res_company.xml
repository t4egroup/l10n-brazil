<odoo>
    <record id="focus_nfse_res_company_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.res.company.form (in l10n_br_nfse_focus)</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="l10n_br_nfse.nfse_res_company_form"/>
        <field name="arch" type="xml">
            <field name="provedor_nfse" position="after">
                <field invisible="provedor_nfse != 'focusnfe' or nfse_environment != 1" name="focusnfe_production_token"/>
                <field invisible="provedor_nfse != 'focusnfe' or nfse_environment != '2'" name="focusnfe_homologation_token"/>
                <field invisible="provedor_nfse != 'focusnfe'" name="focusnfe_nfse_service_type_value"/>
                <field invisible="provedor_nfse != 'focusnfe'" name="focusnfe_nfse_cnae_code_value"/></field></field>
    </record>
</odoo>

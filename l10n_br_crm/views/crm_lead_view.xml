<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_br_crm_leads_form" model="ir.ui.view">
        <field name="name">l10n_br_crm.leads.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field invisible="1" name="show_l10n_br"/>
                <field invisible="show_l10n_br == False" name="street"/></field>
            <xpath expr="//group[@name='lead_info']/div" position="after">
                <field name="name_surname"/>
                <field invisible="show_l10n_br == False" name="cpf"/>
                <field invisible="show_l10n_br == False" name="rg"/>
            </xpath>
            <xpath expr="//group[@name='lead_partner']/field[@name='partner_name']" position="after">
                <field invisible="show_l10n_br == False" name="legal_name"/>
                <field invisible="show_l10n_br == False" name="cnpj"/>
                <field invisible="show_l10n_br == False" name="inscr_est"/>
            </xpath>
            <xpath expr="//group[@name='lead_partner']/field[@name='website']" position="before">
                <field invisible="show_l10n_br == False" name="inscr_mun"/>
                <field invisible="show_l10n_br == False" name="suframa"/>
            </xpath>
            <xpath expr="//page[@name='lead']//group/field[@name='partner_name']" position="after">
                <field invisible="show_l10n_br == False" name="legal_name"/>
                <field invisible="show_l10n_br == False" name="cnpj"/>
                <field invisible="show_l10n_br == False" name="inscr_est"/>
            </xpath>
            <xpath expr="//page[@name='lead']//group/field[@name='website']" position="before">
                <field invisible="show_l10n_br == False" name="inscr_mun"/>
                <field invisible="show_l10n_br == False" name="suframa"/>
            </xpath>
            <xpath expr="//page[@name='lead']//group/field[@name='function']" position="before">
                <field name="name_surname"/>
                <field invisible="show_l10n_br == False" name="cpf"/>
                <field invisible="show_l10n_br == False" name="rg"/>
            </xpath></field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_br_zip_search_form" model="ir.ui.view">
        <field name="name">Pesquisar CEP</field>
        <field name="model">l10n_br.zip.search</field>
        <field name="arch" type="xml">
            <form string="Pesquisar CEP">
                <group col="8" colspan="8" invisible="state not in ['init']">
                    <field colspan="8" name="zip"/>
                    <field colspan="8" name="street_name"/>
                    <field colspan="4" name="district"/>
                    <field colspan="4" name="country_id" required="True"/>
                    <field colspan="4" name="state_id" required="True"/>
                    <field colspan="4" name="city_id" required="True"/>
                    <field colspan="4" invisible="1" name="state"/>
                </group>
                <group col="8" colspan="8" invisible="state not in ['done']">
                    <field colspan="8" height="130" name="zip_ids" nolabel="1" readonly="1" wizard="one2many_list"/>
                </group>
                <footer invisible="state not in ['init']">
                    <button class="oe_highlight" name="zip_search" string="Pesquisar" type="object"/>
                    <button class="oe_link" special="cancel" string="Cancelar"/>
                </footer>
                <footer invisible="state not in ['done']">
                    <button class="oe_link" special="cancel" string="Cancelar"/>
                    <button class="oe_highlight" name="zip_new_search" string="Nova Pesquisa" type="object"/>
                </footer>
            </form></field>
    </record>
    <record id="l10n_br_zip_search_action" model="ir.actions.act_window">
        <field name="name">Pesquisar CEP</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_br.zip.search</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

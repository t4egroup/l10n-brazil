<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_br_zip_res_partner_form" model="ir.ui.view">
        <field name="name">l10n_br_base.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_res_partner_address"/>
        <field name="priority">33</field>
        <field name="arch" type="xml">
            <field name="zip" position="after">
                <button aria-label="Pesquisar CEP" class="btn-sm btn-link mb4 fa fa-search oe_edit_only" invisible="country_id != %(base.br)d" name="zip_search" title="Pesquisar CEP" type="object"/></field></field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ncm_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.ncm.search</field>
        <field name="model">l10n_br_fiscal.ncm</field>
        <field name="arch" type="xml">
            <search string="NCM">
                <field name="code"/>
                <field name="name"/>
                <field name="exception"/>
                <group expand="0" string="Group By...">
                    <filter context="{'group_by' : 'tax_ipi_id'}" domain="[]" name="tax_ipi_id" string="IPI"/>
                    <filter context="{'group_by' : 'tax_ii_id'}" domain="[]" name="tax_ii_id" string="II"/>
                </group>
            </search></field>
    </record>
    <record id="ncm_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.ncm.tree</field>
        <field name="model">l10n_br_fiscal.ncm</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="exception"/>
                <field name="tax_ipi_id"/>
                <field name="tax_ii_id"/>
                <field name="uoe_id"/>
                <field name="uot_id"/>
            </tree></field>
    </record>
    <record id="ncm_kanban" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.ncm.kanban</field>
        <field name="model">l10n_br_fiscal.ncm</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="code"/>
                <field name="name"/>
                <field name="exception"/>
                <field name="tax_ipi_id"/>
                <field name="tax_ii_id"/>
                <field name="uoe_id"/>
                <field name="uot_id"/>
                <field name="product_tmpl_qty"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <h2>
                                        <field name="code"/>
                                    </h2>
                                </strong>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.product_tmpl_qty.value >= 1">
                                    <strong>
                                        <t t-esc="record.product_tmpl_qty.value"/>
                                        Product(s)
                                    </strong>
                                </div>
                                <div>
                                    <field name="tax_ipi_id"/>
                                    <span t-if="record.tax_ii_id.value">
                                        -
                                    </span>
                                    <field name="tax_ii_id"/>
                                    <span t-if="record.uoe_id.value">
                                        -
                                    </span>
                                    <field name="uoe_id"/>
                                    <field name="uot_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban></field>
    </record>
    <record id="ncm_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.ncm.form</field>
        <field name="model">l10n_br_fiscal.ncm</field>
        <field name="arch" type="xml">
            <form string="NCM">
                <sheet>
                    <widget bg_color="bg-danger" invisible="active == True" name="web_ribbon" title="Archived"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-file" invisible="0" name="action_ibpt_inquiry" string="Update Tax Estimate" type="object"/>
                        <button class="oe_stat_button" context="{'search_default_ncm_id': active_id}" icon="fa-bars" id="product_tmpl_button" invisible="product_tmpl_qty == 0" name="%(product.product_template_action_all)d" type="action">
                            <field name="product_tmpl_qty" string="Products" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field invisible="1" name="active"/>
                        <field name="code" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="exception" readonly="1"/>
                        <field name="tax_ipi_id" readonly="1"/>
                        <field name="tax_ii_id" readonly="1"/>
                        <field name="uoe_id" readonly="1"/>
                        <field name="uot_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="tax_product_tmpl" string="Related Produts">
                            <field name="product_tmpl_ids"/>
                        </page>
                        <page name="cest" string="Related CEST">
                            <field name="cest_ids"/>
                        </page>
                        <page name="pis_cofins" string="Custom PIS/COFINS">
                            <field name="piscofins_ids"/>
                        </page>
                        <page name="tax_estimate" string="Estimate Taxes">
                            <group>
                                <group>
                                    <field name="estimate_tax_national"/>
                                </group>
                                <group>
                                    <field name="estimate_tax_imported"/>
                                </group>
                            </group>
                            <field name="tax_estimate_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form></field>
    </record>
</odoo>

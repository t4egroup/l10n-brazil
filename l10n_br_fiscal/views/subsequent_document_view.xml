<odoo>
    <record id="subsequent_document_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.subsequent.document.tree</field>
        <field name="model">l10n_br_fiscal.subsequent.document</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="subsequent_document_id"/>
                <field name="subsequent_operation_id"/>
                <field invisible="True" name="fiscal_operation_id"/>
                <field name="operation_performed"/>
                <button invisible="subsequent_document_id == False" name="show_subsequent_document" string="Show Document" type="object"/>
            </tree></field>
    </record>
    <record id="source_document_tree" model="ir.ui.view">
        <field name="name">source.document.tree</field>
        <field name="model">l10n_br_fiscal.subsequent.document</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="source_document_id"/>
                <field name="subsequent_operation_id" string="Source Operation"/>
                <field invisible="True" name="fiscal_operation_id"/>
                <field name="operation_performed"/>
                <button invisible="source_document_id == False" name="show_source_document" string="Show Document" type="object"/>
            </tree></field>
    </record>
</odoo>

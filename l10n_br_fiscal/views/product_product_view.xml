<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.product.product.search</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field filter_domain="[('ncm_id', '=', raw_value)]" name="ncm_id" string="NCM"/>
                <field filter_domain="[('nbs_id', '=', raw_value)]" name="nbs_id" string="NBS"/>
                <field filter_domain="[('cest_id', '=', raw_value)]" name="cest_id" string="CEST"/>
                <field filter_domain="[('service_type_id', '=', raw_value)]" name="service_type_id" string="Service Type LC 166"/></field></field>
    </record>
    <record id="product_tree" model="ir.ui.view">
        <field name="name">product.product.tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="default_code"/>
                <field name="name"/>
                <field name="ncm_id"/>
                <field name="standard_price"/>
                <field name="type"/>
                <field invisible="1" name="active"/>
            </tree></field>
    </record>
    <record id="product_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page groups="l10n_br_fiscal.group_manager" name="fiscal" string="Fiscal">
                    <group>
                        <group>
                            <field name="fiscal_type" required="1"/>
                            <field invisible="fiscal_type == '09'" name="icms_origin" required="fiscal_type != '09'"/>
                            <field name="ncm_id" required="1"/>
                            <field name="tax_icms_or_issqn" required="1"/>
                            <field invisible="fiscal_type != '09'" name="service_type_id"/>
                            <field context="{'default_service_type_id': service_type_id}" invisible="fiscal_type != '09'" name="city_taxation_code_id">
                                <tree editable="bottom">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="service_type_id"/>
                                    <field name="state_id"/>
                                    <field name="city_id"/>
                                </tree></field>
                        </group>
                        <group>
                            <field name="fiscal_genre_id" required="1"/>
                            <field invisible="fiscal_type == '09'" name="cest_id"/>
                            <field invisible="fiscal_type != '09'" name="nbs_id"/>
                            <field invisible="fiscal_type == '09'" name="ipi_guideline_class_id"/>
                            <field invisible="fiscal_type == '09'" name="ipi_control_seal_id"/>
                        </group>
                        <group string="Tax UOM">
                            <field name="uoe_id"/>
                            <field invisible="fiscal_type == False" name="uoe_factor" required="uot_id != False"/>
                            <field name="uot_id"/>
                            <field invisible="uot_id == False" name="uot_factor" required="uot_id != False"/>
                        </group>
                    </group>
                </page>
            </xpath></field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="document_related_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.related.tree</field>
        <field name="model">l10n_br_fiscal.document.related</field>
        <field name="arch" type="xml">
            <tree>
                <field name="document_type_id"/>
                <field name="document_key"/>
                <field name="document_serie"/>
                <field name="document_number"/>
            </tree></field>
    </record>
    <record id="document_related_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.document.related.form</field>
        <field name="model">l10n_br_fiscal.document.related</field>
        <field name="arch" type="xml">
            <form string="Fiscal Document Related">
                <field invisible="1" name="document_type_code"/>
                <group>
                    <field context="{'fiscal_document_complete_name': True}" name="document_related_id"/>
                </group>
                <group>
                    <field name="document_type_id"/>
                </group>
                <group invisible="document_type_code not in ('55', '57')" string="NF-e/CT-e">
                    <field name="document_key"/>
                </group>
                <group invisible="document_type_code not in ('01', '04')" string="Nota Fiscal/Produtor/Cupom Fiscal">
                    <field name="document_serie" required="document_type_code in ('01', '04', '07')"/>
                    <field name="document_number" required="document_type_code in ('01', '04', '07')"/>
                    <field invisible="document_type_code == '07'" name="state_id" required="document_type_code in ('01', '04')"/>
                    <field invisible="document_type_code == '07'" name="document_date" required="document_type_code in ('01', '04')"/>
                    <field invisible="document_type_code != '04'" name="cpfcnpj_type" required="document_type_code in '04'"/>
                    <field invisible="document_type_code == '07'" name="cnpj_cpf" required="document_type_code in ('01', '04')"/>
                    <field invisible="document_type_code != '04'" name="inscr_est"/>
                </group>
            </form></field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form"/>
        <field name="arch" type="xml">
            <group name="fiscal_numbers" position="after">
                <group name="fiscal_profile" string="Fiscal Profile">
                    <field force_save="1" invisible="1" name="fiscal_profile_id"/>
                    <field force_save="1" groups="l10n_br_fiscal.group_user" name="fiscal_profile_id"/>
                    <field force_save="1" name="ind_ie_dest" readonly="fiscal_profile_id != False"/>
                    <field force_save="1" name="tax_framework" readonly="fiscal_profile_id != False"/>
                    <field force_save="1" name="is_public_entity" readonly="fiscal_profile_id != False"/>
                    <field name="cnae_main_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="ind_final"/>
                </group>
            </group></field>
    </record>
</odoo>

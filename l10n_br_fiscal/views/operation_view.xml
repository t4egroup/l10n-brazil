<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="operation_search" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.search</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <search string="Fiscal Operation">
                <field name="code"/>
                <field name="name"/>
                <group expand="0" string="Group By...">
                    <filter context="{'group_by' : 'fiscal_operation_type'}" domain="[]" name="fiscal_operation_type" string="Fiscal Operation Type"/>
                </group>
            </search></field>
    </record>
    <record id="operation_tree" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.tree</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field groups="base.group_multi_company" name="company_id"/>
                <field name="fiscal_operation_type"/>
                <field name="fiscal_type"/>
                <field name="state"/>
            </tree></field>
    </record>
    <record id="operation_form" model="ir.ui.view">
        <field name="name">l10n_br_fiscal.operation.form</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <form string="Fiscal Operation">
                <field invisible="1" name="id"/>
                <header>
                    <button class="oe_highlight" groups="l10n_br_fiscal.group_manager" invisible="state not in ['draft']" name="action_review" string="Review" type="object"/>
                    <button class="oe_highlight" groups="l10n_br_fiscal.group_manager" invisible="state not in ['review','expired']" name="action_approve" string="Approve" type="object"/>
                    <button class="oe_highlight" groups="l10n_br_fiscal.group_manager" invisible="state not in ['review','approved']" name="action_draft" string="Reset To Draft" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1 class="o_row row no-gutters d-flex">
                        <div class="col-2">
                            <label class="oe_edit_only" for="code"/>
                            <div class="o_row">
                                <field class="oe_inline" name="code"/>
                            </div>
                        </div>
                        <div class="col-10">
                            <label class="oe_edit_only" for="name"/>
                            <div class="o_row d-flex">
                                <field class="oe_inline" name="name"/>
                            </div>
                        </div>
                    </h1>
                    <group>
                        <group>
                            <field name="fiscal_operation_type"/>
                            <field name="fiscal_type"/>
                            <field name="company_id"/>
                            <field name="edoc_purpose"/>
                            <field groups="base.group_multi_company" name="company_id"/>
                        </group>
                        <group>
                            <field groups="base.group_multi_company" name="company_id"/>
                            <field name="default_price_unit"/>
                            <field name="return_fiscal_operation_id"/>
                            <field name="inverse_fiscal_operation_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="operation_line" string="Operation Line">
                            <field context="{'default_fiscal_operation_id': id, 'default_fiscal_type': fiscal_type, 'default_fiscal_operation_type': fiscal_operation_type, 'form_view_ref': 'l10n_br_fiscal.operation_line_form' , 'show_code_only': 1}" name="line_ids"></field>
                        </page>
                        <page name="operation_document_type" string="Fiscal Documents">
                            <field context="{'default_fiscal_operation_id': id}" name="document_type_ids">
                                <tree>
                                    <field name="document_type_id"/>
                                    <field name="document_serie_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <field invisible="1" name="company_id"/>
                                        <field name="document_type_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field context="{'default_document_type_id': document_type_id, 'default_company_id': company_id}" name="document_serie_id"/>
                                    </group>
                                </form></field>
                        </page>
                        <page name="subsequent_operation" string="Operations">
                            <group>
                                <field name="return_fiscal_operation_id"/>
                                <field name="inverse_fiscal_operation_id"/>
                            </group>
                            <field name="operation_subsequent_ids"/>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="comment_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form></field>
    </record>
</odoo>
